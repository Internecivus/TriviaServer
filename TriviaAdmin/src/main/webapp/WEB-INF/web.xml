<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!--JSF and Primefaces-->

    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.UPLOADER</param-name>
        <param-value>native</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.INTERPRET_EMPTY_STRING_SUBMITTED_VALUES_AS_NULL</param-name>
        <param-value>true</param-value>
    </context-param>
    <!--<context-param>-->
        <!--<param-name>primefaces.THEME</param-name>-->
        <!--<param-value></param-value>-->
    <!--</context-param>-->



    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>



    <!--Error pages-->

    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/errors/404.xhtml</location> <!--Does not expose secured resources.-->
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/errors/404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/errors/500.xhtml</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/errors/500.xhtml</location>
    </error-page>



    <!--Security-->

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>

        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>

        <!--<user-data-constraint>-->
            <!--<transport-guarantee>CONFIDENTIAL</transport-guarantee>-->
        <!--</user-data-constraint>-->
    </security-constraint>

    <security-role>
        <role-name>CONTRIBUTOR</role-name>
    </security-role>
    <security-role>
        <role-name>PROVIDER</role-name>
    </security-role>
    <security-role>
        <role-name>MODERATOR</role-name>
    </security-role>
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>

    <session-config>
        <session-timeout>30</session-timeout> <!--Minutes-->
    </session-config>
</web-app>